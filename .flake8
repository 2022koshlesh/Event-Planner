[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    */migrations/*,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    htmlcov,
    node_modules,
    staticfiles,
    media

ignore =
    E203,
    E266,
    E501,
    W503,
    W504,
    F401

per-file-ignores =
    __init__.py:F401
    */settings/*.py:F405,F403
    */tests/*.py:F811,F401

max-complexity = 10

